- model_class = LogLine
.page-header
  %h1
    = t '.title', default: @node.class.model_name.human.titleize
    "#{@node.name}"
  %h2
    =t '.title', default: model_class.model_name.human.pluralize.titleize
    = link_to t('.new', default: t('helpers.links.new')), new_node_log_line_path(@node), class: 'btn btn-primary'

= render partial: 'log_lines_table'
